{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && prisma generate",
    "build:production": "cp prisma/schema.production.prisma prisma/schema.prisma && rm -rf prisma/migrations && cp -r prisma/migrations-postgresql prisma/migrations && prisma generate && prisma migrate reset --force && prisma migrate deploy && tsc",
    "build:production:windows": "powershell -ExecutionPolicy Bypass -File build-production.ps1",
    "prestart": "npm run build:production",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.9",
    "prisma": "^5.16.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5"
  }
}
